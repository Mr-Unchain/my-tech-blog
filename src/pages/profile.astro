---
// src/pages/profile.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import { getProfile } from "../lib/microcms";

const profile = await getProfile();
---

<BaseLayout>
  <main class="container mx-auto px-4 py-8 md:py-12">
    <div class="bg-slate-800 p-6 md:p-10 rounded-xl border border-slate-700">
      <!-- ヘッダーセクション -->
      <header class="flex flex-col md:flex-row items-center gap-8 mb-10">
        {
          profile.avatar && (
            <img
              src={profile.avatar.url}
              alt={profile.name}
              class="w-32 h-32 rounded-full ring-4 ring-slate-700"
            />
          )
        }
        <div class="text-center md:text-left">
          <h1 class="text-4xl font-bold text-slate-100">{profile.name}</h1>
          <p class="mt-2 text-slate-400">Software Engineer / Content Creator</p>
          <div class="flex justify-center md:justify-start space-x-4 mt-4">
            {
              profile.xUrl && (
                <a
                  href={profile.xUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-slate-400 hover:text-blue-400"
                >
                  X
                </a>
              )
            }
            {
              profile.githubUrl && (
                <a
                  href={profile.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-slate-400 hover:text-blue-400"
                >
                  GitHub
                </a>
              )
            }
          </div>
        </div>
      </header>

      <!-- 各セクション -->
      <div class="space-y-12">
        <!-- 自己紹介 -->
        {
          profile.portfolio_introduction && (
            <section>
              <h2 class="text-2xl font-bold text-slate-100 border-b border-slate-700 pb-2 mb-4">
                自己紹介
              </h2>
              <div class="prose prose-lg max-w-none">
                <Fragment set:html={profile.portfolio_introduction} />
              </div>
            </section>
          )
        }

        <!-- スキル -->
        {
          profile.skills && (
            <section>
              <h2 class="text-2xl font-bold text-slate-100 border-b border-slate-700 pb-2 mb-4">
                スキル
              </h2>
              <div class="prose prose-lg max-w-none">
                <Fragment set:html={profile.skills} />
              </div>
            </section>
          )
        }

        <!-- 経歴 -->
        {
          profile.work_history && (
            <section>
              <h2 class="text-2xl font-bold text-slate-100 border-b border-slate-700 pb-2 mb-4">
                経歴
              </h2>
              <div class="prose prose-lg max-w-none">
                <Fragment set:html={profile.work_history} />
              </div>
            </section>
          )
        }

        <!-- 連絡先 -->
        {
          profile.contact_email && (
            <section>
              <h2 class="text-2xl font-bold text-slate-100 border-b border-slate-700 pb-2 mb-4">
                お問い合わせ
              </h2>
              <p class="text-slate-400">
                お仕事のご依頼やご相談は、下記メールアドレスまでお気軽にご連絡ください。
              </p>
              <a
                href={`mailto:${profile.contact_email}`}
                class="mt-2 inline-block text-blue-400 hover:underline"
              >
                {profile.contact_email}
              </a>
            </section>
          )
        }
      </div>
    </div>
  </main>
</BaseLayout>
