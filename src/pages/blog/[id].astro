---
// src/pages/blog/[id].astro
import { doc, increment, setDoc } from "firebase/firestore";
import * as cheerio from "cheerio";
import Comments from "../../components/Comments.astro";
import LikeButton from "../../components/LikeButton.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { db } from "../../lib/firebase";
import { getBlogDetail } from "../../lib/microcms";
import { Image } from "astro:assets";

const { id } = Astro.params;

if (!id) {
  // idがない場合は404ページなどを表示
  return new Response(null, { status: 404 });
}

// 閲覧数をインクリメント
const viewRef = doc(db, "views", id);
await setDoc(viewRef, { count: increment(1) }, { merge: true });

const post = await getBlogDetail(id);

if (!post) {
  // 記事が見つからない場合も404
  return new Response(null, { status: 404 });
}

// 目次を生成
let headings: { text: string; id: string; tagName: string }[] = [];
if (post.content) {
  const $ = cheerio.load(post.content);
  headings = $("h2, h3")
    .toArray()
    .map((data) => {
      const heading = data as cheerio.TagElement;
      const text = $(heading).text();
      const id = heading.attribs.id;
      const tagName = heading.tagName; // h2 or h3
      return { text, id, tagName };
    });
}
---

<BaseLayout
  pageTitle={post.title}
  pageDescription={post.description}
  ogImageUrl={post.eyecatch?.url}
>
  <main class="container mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 lg:grid-cols-4 lg:gap-12">
      <!-- メインコンテンツ -->
      <article class="lg:col-span-3">
        <div
          class="bg-slate-800/50 p-6 md:p-10 rounded-xl border border-slate-700/80 shadow-lg"
        >
          <!-- 記事ヘッダー -->
          <header class="text-center mb-10">
            <h1
              class="text-3xl md:text-5xl font-extrabold text-slate-100 leading-tight mb-6"
            >
              {post.title}
            </h1>
            <div
              class="flex items-center justify-center flex-wrap gap-x-6 gap-y-2 text-sm text-slate-400"
            >
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                <time datetime={post.publishedAt}>
                  {new Date(post.publishedAt || "").toLocaleDateString("ja-JP")}
                </time>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path></svg>
                <a href={`/category/${post.category[0]}/`} class="bg-slate-700 text-slate-300 text-xs font-medium px-3 py-1 rounded-full hover:bg-slate-600 transition-colors">{post.category[0]}</a>
              </div>
            </div>
          </header>

          {
            post.eyecatch && (
              <Image
                src={post.eyecatch.url}
                width={1200}
                height={630}
                alt={`「${post.title}」のアイキャッチ画像`}
                class="w-full h-auto rounded-lg mb-10 shadow-lg"
              />
            )
          }

          <!-- 本文 -->
          <div
            class="prose prose-lg max-w-none text-slate-300
            prose-headings:text-slate-100 prose-h2:border-b prose-h2:border-slate-700 prose-h2:pb-2
            prose-a:text-blue-400 hover:prose-a:text-blue-300 prose-a:transition-colors
            prose-strong:text-slate-200
            prose-blockquote:border-l-blue-500 prose-blockquote:bg-slate-800 prose-blockquote:p-4 prose-blockquote:rounded-r-lg
            prose-code:bg-slate-900 prose-code:text-pink-400 prose-code:p-1 prose-code:rounded-md
            prose-pre:bg-slate-900 prose-pre:border prose-pre:border-slate-700 prose-pre:rounded-lg"
          >
            <Fragment set:html={post.content} />
          </div>
        </div>

        <!-- インタラクション -->
        <div
          class="mt-8 bg-slate-800/50 p-6 rounded-xl border border-slate-700/80 shadow-lg"
        >
          <div class="flex justify-center">
            <LikeButton postId={post.id} />
          </div>
        </div>

        <!-- コメント欄 -->
        <div
          class="mt-8 bg-slate-800/50 p-6 md:p-10 rounded-xl border border-slate-700/80 shadow-lg"
        >
          <h2 class="text-2xl font-bold mb-6 text-slate-100">コメント</h2>
          <Comments
            pageUrl={Astro.url.href}
            pageIdentifier={post.id}
            pageTitle={post.title}
          />
        </div>
      </article>

      <!-- サイドバー (目次) -->
      <aside class="lg:col-span-1 lg:sticky lg:top-28 self-start hidden lg:block">
        <div
          class="bg-slate-800/50 p-6 rounded-xl border border-slate-700/80 shadow-lg"
        >
          <h3 class="font-bold text-lg mb-4 text-slate-100">目次</h3>
          <ul class="space-y-2">
            {
              headings.map((heading) => (
                <li>
                  <a
                    href={`#${heading.id}`}
                    class:list={[
                      "text-slate-400 hover:text-blue-400 transition-colors text-sm",
                      { "pl-4": heading.tagName === "h3" },
                    ]}
                  >
                    {heading.text}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </aside>
    </div>
  </main>
</BaseLayout>
