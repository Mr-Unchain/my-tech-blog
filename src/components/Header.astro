---

<header class="bg-gradient-to-r from-slate-900 via-slate-900/98 to-slate-900 border-b border-slate-800/50 backdrop-blur-sm sticky top-0 z-50 shadow-lg shadow-black/10">
  <!-- Background tech pattern -->
  <div class="absolute inset-0 bg-tech-grid bg-tech-grid opacity-5 pointer-events-none"></div>
  
  <div class="container mx-auto px-6 max-w-7xl relative z-10">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo Section -->
      <div class="flex items-center space-x-4">
        <div class="relative">
          <div class="w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-pulse"></div>
          <div class="absolute inset-0 w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-ping opacity-30"></div>
        </div>
        <a href="/" class="flex items-center space-x-3 group">
          <img 
            src="/logo.svg" 
            alt="Monologger ロゴ" 
            class="w-8 h-8 md:w-10 md:h-10 transition-transform duration-300 group-hover:scale-110"
          />
          <span class="text-xl md:text-2xl font-bold bg-gradient-to-r from-white to-cyan-100 bg-clip-text text-transparent group-hover:from-cyan-200 group-hover:to-blue-200 transition-all duration-300">
            Monologger
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-3">
        <a 
          href="/profile" 
          class="px-4 py-2 text-slate-300 hover:text-cyan-400 hover:bg-slate-800/50 rounded-lg transition-all duration-200 font-medium relative group"
        >
          プロフィール
          <span class="absolute -bottom-1 left-4 w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-[calc(100%-2rem)] transition-all duration-300 rounded-full"></span>
        </a>
        <a 
          href="/search" 
          class="p-2 text-slate-300 hover:text-cyan-400 hover:bg-slate-800/50 rounded-lg transition-all duration-200 relative group"
          aria-label="検索ページへ移動"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            ></path>
          </svg>
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button 
          id="mobile-menu-button" 
          class="p-2 text-slate-300 hover:text-cyan-400 hover:bg-slate-800/50 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-cyan-400/50"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div 
    id="mobile-menu-overlay" 
    class="md:hidden fixed inset-0 bg-black/70 backdrop-blur-md z-[998] opacity-0 pointer-events-none transition-all duration-300"
  ></div>

  <!-- Mobile Menu Sidebar -->
  <div 
    id="mobile-menu" 
    class="md:hidden fixed top-0 right-0 h-full w-80 max-w-[85vw] bg-slate-900 border-l-2 border-slate-600 shadow-2xl z-[999] transform translate-x-full transition-transform duration-300 ease-out"
  >
    <!-- Header -->
    <div class="flex items-center justify-end p-6">
      <button 
        id="mobile-menu-close" 
        class="p-3 text-white hover:text-red-400 hover:bg-slate-800 rounded-xl transition-all duration-200 border border-slate-600 hover:border-red-400"
      >
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Menu Items -->
    <nav class="p-8 pt-12 space-y-6">
      <a 
        href="/profile/" 
        class="flex items-center px-6 py-6 text-white hover:bg-slate-800 rounded-2xl transition-all duration-200 font-medium group border-2 border-slate-700 hover:border-cyan-400 shadow-lg"
      >
        <div class="flex items-center justify-center w-14 h-14 bg-cyan-600 rounded-2xl mr-6 group-hover:bg-cyan-500 transition-all duration-200 shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <span class="text-xl font-bold">プロフィール</span>
      </a>
      
      <a 
        href="/search/" 
        class="flex items-center px-6 py-6 text-white hover:bg-slate-800 rounded-2xl transition-all duration-200 font-medium group border-2 border-slate-700 hover:border-emerald-400 shadow-lg"
      >
        <div class="flex items-center justify-center w-14 h-14 bg-emerald-600 rounded-2xl mr-6 group-hover:bg-emerald-500 transition-all duration-200 shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <span class="text-xl font-bold">検索</span>
      </a>
    </nav>
  </div>
</header>

<script is:inline>
  function openMobileMenu() {
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    if (mobileMenu && overlay) {
      // オーバーレイを表示
      overlay.classList.remove("opacity-0", "pointer-events-none");
      overlay.classList.add("opacity-100");
      
      // メニューをスライドイン
      mobileMenu.classList.remove("translate-x-full");
      mobileMenu.classList.add("translate-x-0");
      
      // ボディのスクロールを無効化
      document.body.style.overflow = "hidden";
    }
  }

  function closeMobileMenu() {
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    if (mobileMenu && overlay) {
      // オーバーレイを非表示
      overlay.classList.remove("opacity-100");
      overlay.classList.add("opacity-0", "pointer-events-none");
      
      // メニューをスライドアウト
      mobileMenu.classList.remove("translate-x-0");
      mobileMenu.classList.add("translate-x-full");
      
      // ボディのスクロールを有効化
      document.body.style.overflow = "";
    }
  }

  // ページ読み込み後に即座に実行
  document.addEventListener("DOMContentLoaded", function() {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenuClose = document.getElementById("mobile-menu-close");
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    // ハンバーガーボタンクリック
    if (mobileMenuButton) {
      mobileMenuButton.onclick = function(e) {
        e.preventDefault();
        e.stopPropagation();
        openMobileMenu();
      };
    }
    
    // 閉じるボタンクリック
    if (mobileMenuClose) {
      mobileMenuClose.onclick = function(e) {
        e.preventDefault();
        e.stopPropagation();
        closeMobileMenu();
      };
    }
    
    // オーバーレイクリックで閉じる
    if (overlay) {
      overlay.onclick = function() {
        closeMobileMenu();
      };
    }
    
    // メニュー内のリンクをクリックしたら閉じる
    if (mobileMenu) {
      const menuLinks = mobileMenu.querySelectorAll("a");
      menuLinks.forEach(function(link) {
        link.onclick = function() {
          closeMobileMenu();
        };
      });
    }
    
    // ESCキーで閉じる
    document.addEventListener("keydown", function(e) {
      if (e.key === "Escape") {
        closeMobileMenu();
      }
    });
  });
</script>
