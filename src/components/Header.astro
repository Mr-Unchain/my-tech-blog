---

<header class="bg-gradient-to-r from-slate-900 via-slate-900/98 to-slate-900 border-b border-slate-800/50 backdrop-blur-sm sticky top-0 z-[1000] shadow-lg shadow-black/10">
  <!-- Background tech pattern -->
  <div class="absolute inset-0 bg-tech-grid bg-tech-grid opacity-5 pointer-events-none"></div>
  
  <div class="container mx-auto px-6 max-w-7xl relative z-10">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo Section -->
      <div class="flex items-center space-x-4">
        <div class="relative">
          <div class="w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-pulse"></div>
          <div class="absolute inset-0 w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-ping opacity-30"></div>
        </div>
        <a href="/" class="flex items-center space-x-3 group">
          <img 
            src="/logo.svg" 
            alt="Monologger ロゴ" 
            class="w-8 h-8 md:w-10 md:h-10 transition-transform duration-300 group-hover:scale-110"
          />
          <span class="text-xl md:text-2xl font-bold bg-gradient-to-r from-white to-cyan-100 bg-clip-text text-transparent group-hover:from-cyan-200 group-hover:to-blue-200 transition-all duration-300">
            Monologger
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-3">
        <a 
          href="/profile" 
          class="px-4 py-2 text-slate-300 hover:text-cyan-400 hover:bg-slate-800/50 rounded-lg transition-all duration-200 font-medium relative group"
        >
          プロフィール
          <span class="absolute -bottom-1 left-4 w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-[calc(100%-2rem)] transition-all duration-300 rounded-full"></span>
        </a>
        <a 
          href="/search" 
          class="p-2 text-slate-300 hover:text-cyan-400 hover:bg-slate-800/50 rounded-lg transition-all duration-200 relative group"
          aria-label="検索ページへ移動"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            ></path>
          </svg>
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button 
          id="mobile-menu-button" 
          class="p-3 text-slate-200 hover:text-white hover:bg-slate-700/60 rounded-xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-cyan-400/50 border border-slate-600/50 hover:border-slate-500/70 backdrop-blur-sm shadow-lg"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div 
    id="mobile-menu-overlay" 
    class="md:hidden fixed inset-0 bg-black/90 z-[9998] opacity-0 pointer-events-none transition-all duration-300"
  ></div>

  <!-- Mobile Menu Sidebar -->
  <div 
    id="mobile-menu" 
    class="md:hidden fixed top-0 right-0 h-screen w-80 max-w-[85vw] bg-slate-800 border-l-2 border-slate-600 shadow-2xl z-[9999] transform translate-x-full transition-transform duration-300 ease-out"
  >
    <!-- Header -->
    <div class="flex items-center justify-between p-4 border-b border-slate-600">
      <h2 class="text-xl font-bold text-white">メニュー</h2>
      <button 
        id="mobile-menu-close" 
        class="p-2 text-white hover:bg-slate-700 rounded-lg"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Menu Items -->
    <div class="p-4">
      <div class="space-y-3">
        <a 
          href="/" 
          class="flex items-center p-4 text-white bg-slate-700 hover:bg-slate-600 rounded-lg"
        >
          <div class="w-10 h-10 bg-blue-600 rounded-lg mr-3 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          <span class="font-semibold">ホーム</span>
        </a>

        <a 
          href="/profile/" 
          class="flex items-center p-4 text-white bg-slate-700 hover:bg-slate-600 rounded-lg"
        >
          <div class="w-10 h-10 bg-cyan-600 rounded-lg mr-3 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <span class="font-semibold">プロフィール</span>
        </a>

        <a 
          href="/search/" 
          class="flex items-center p-4 text-white bg-slate-700 hover:bg-slate-600 rounded-lg"
        >
          <div class="w-10 h-10 bg-emerald-600 rounded-lg mr-3 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <span class="font-semibold">検索</span>
        </a>

        <a 
          href="/contact/" 
          class="flex items-center p-4 text-white bg-slate-700 hover:bg-slate-600 rounded-lg"
        >
          <div class="w-10 h-10 bg-purple-600 rounded-lg mr-3 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <span class="font-semibold">お問い合わせ</span>
        </a>
      </div>
    </div>

    <!-- Footer -->
    <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-slate-600 bg-slate-800">
      <div class="text-center">
        <p class="text-slate-400 text-sm">© 2025 Monologger</p>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  function openMobileMenu() {
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    if (mobileMenu && overlay) {
      // オーバーレイを表示
      overlay.classList.remove("opacity-0", "pointer-events-none");
      overlay.classList.add("opacity-100");
      
      // メニューをスライドイン
      mobileMenu.classList.remove("translate-x-full");
      mobileMenu.classList.add("translate-x-0");
      
      // ボディのスクロールを無効化
      document.body.style.overflow = "hidden";
    }
  }

  function closeMobileMenu() {
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    if (mobileMenu && overlay) {
      // オーバーレイを非表示
      overlay.classList.remove("opacity-100");
      overlay.classList.add("opacity-0", "pointer-events-none");
      
      // メニューをスライドアウト
      mobileMenu.classList.remove("translate-x-0");
      mobileMenu.classList.add("translate-x-full");
      
      // ボディのスクロールを有効化
      document.body.style.overflow = "";
    }
  }
  
  // View Transitionsに対応したイベントリスナー設定
  function initializeMobileMenu() {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenuClose = document.getElementById("mobile-menu-close");
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    // 既存のイベントリスナーをクリア（重複を防ぐため）
    if (mobileMenuButton) {
      mobileMenuButton.onclick = null;
    }
    if (mobileMenuClose) {
      mobileMenuClose.onclick = null;
    }
    if (overlay) {
      overlay.onclick = null;
    }
    
    // ハンバーガーボタンクリック
    if (mobileMenuButton) {
      mobileMenuButton.onclick = function(e) {
        e.preventDefault();
        e.stopPropagation();
        openMobileMenu();
      };
    }
    
    // 閉じるボタンクリック
    if (mobileMenuClose) {
      mobileMenuClose.onclick = function(e) {
        e.preventDefault();
        e.stopPropagation();
        closeMobileMenu();
      };
    }
    
    // オーバーレイクリックで閉じる
    if (overlay) {
      overlay.onclick = function() {
        closeMobileMenu();
      };
    }
    
    // メニュー内のリンクをクリックしたら閉じる
    if (mobileMenu) {
      const menuLinks = mobileMenu.querySelectorAll("a");
      menuLinks.forEach(function(link) {
        link.onclick = function() {
          closeMobileMenu();
        };
      });
    }
  }
  
  // ESCキーで閉じる（グローバルイベント）
  function handleEscapeKey(e) {
    if (e.key === "Escape") {
      closeMobileMenu();
    }
  }
  
  // 初回ページ読み込み時とView Transitionsでのページ遷移時に実行
  document.addEventListener("DOMContentLoaded", initializeMobileMenu);
  document.addEventListener("astro:page-load", initializeMobileMenu);
  
  // ESCキーイベントは一度だけ設定
  document.addEventListener("keydown", handleEscapeKey);
</script>
