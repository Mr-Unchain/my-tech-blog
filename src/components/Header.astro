---

<header class="bg-gradient-to-r from-slate-900 via-slate-900/98 to-slate-900 border-b border-slate-800/50 backdrop-blur-sm sticky top-0 z-[1000] shadow-lg shadow-black/10">
  <!-- Background tech pattern -->
  <div class="absolute inset-0 bg-tech-grid bg-tech-grid opacity-5 pointer-events-none"></div>
  
  <div class="container mx-auto px-6 max-w-7xl relative z-10">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo Section -->
      <div class="flex items-center space-x-4">
        <div class="relative">
          <div class="w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-pulse"></div>
          <div class="absolute inset-0 w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-ping opacity-30"></div>
        </div>
        <a href="/" class="flex items-center space-x-3 group">
          <img 
            src="/logo.svg" 
            alt="Monologger ロゴ" 
            class="w-8 h-8 md:w-10 md:h-10 transition-transform duration-300 group-hover:scale-110"
          />
          <span class="text-xl md:text-2xl font-bold bg-gradient-to-r from-white to-cyan-100 bg-clip-text text-transparent group-hover:from-cyan-200 group-hover:to-blue-200 transition-all duration-300">
            Monologger
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-3">
        <a 
          href="/profile" 
          class="px-4 py-2 text-slate-300 hover:text-cyan-400 hover:bg-slate-800/50 rounded-lg transition-all duration-200 font-medium relative group"
        >
          プロフィール
          <span class="absolute -bottom-1 left-4 w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-[calc(100%-2rem)] transition-all duration-300 rounded-full"></span>
        </a>
        <a 
          href="/search" 
          class="p-2 text-slate-300 hover:text-cyan-400 hover:bg-slate-800/50 rounded-lg transition-all duration-200 relative group"
          aria-label="検索ページへ移動"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            ></path>
          </svg>
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button 
          id="mobile-menu-button" 
          class="relative p-3 text-slate-200 hover:text-white hover:bg-gradient-to-br hover:from-slate-700/60 hover:to-slate-800/60 rounded-xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-cyan-400/50 border border-slate-600/40 hover:border-cyan-400/50 backdrop-blur-sm shadow-lg hover:shadow-cyan-500/20 overflow-hidden group"
        >
          <!-- Background glow effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          
          <!-- Animated hamburger icon -->
          <div class="relative w-6 h-6 flex flex-col justify-center items-center">
            <span class="hamburger-line hamburger-line-top bg-current h-0.5 w-5 rounded-full transition-all duration-300 ease-in-out transform origin-center"></span>
            <span class="hamburger-line hamburger-line-middle bg-current h-0.5 w-5 rounded-full transition-all duration-300 ease-in-out transform origin-center mt-1"></span>
            <span class="hamburger-line hamburger-line-bottom bg-current h-0.5 w-5 rounded-full transition-all duration-300 ease-in-out transform origin-center mt-1"></span>
          </div>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div 
    id="mobile-menu-overlay" 
    class="md:hidden fixed inset-0 bg-gradient-to-br from-black/95 via-slate-900/90 to-black/95 backdrop-blur-sm z-[9998] opacity-0 pointer-events-none transition-all duration-500 ease-out"
  ></div>

  <!-- Mobile Menu Sidebar -->
  <div 
    id="mobile-menu" 
    class="md:hidden fixed top-0 right-0 h-screen w-80 max-w-[85vw] bg-gradient-to-br from-slate-800/95 via-slate-900/90 to-slate-800/95 backdrop-blur-xl border-l border-slate-600/30 shadow-2xl shadow-black/50 z-[9999] transform translate-x-full transition-all duration-500 ease-out overflow-hidden"
  >
    <!-- Background pattern -->
    <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 via-transparent to-blue-500/5 pointer-events-none"></div>
    <div class="absolute inset-0 bg-tech-grid opacity-5 pointer-events-none"></div>
    <!-- Header -->
    <div class="relative flex items-center justify-between p-6 border-b border-slate-600/30 bg-gradient-to-r from-slate-800/50 to-slate-700/30 backdrop-blur-sm">
      <div class="flex items-center space-x-3">
        <div class="w-2 h-2 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-pulse"></div>
        <h2 class="text-xl font-bold bg-gradient-to-r from-white to-cyan-100 bg-clip-text text-transparent">メニュー</h2>
      </div>
      <button 
        id="mobile-menu-close" 
        class="relative p-2.5 text-white hover:text-cyan-400 hover:bg-gradient-to-br hover:from-slate-700/60 hover:to-slate-600/60 rounded-xl transition-all duration-300 border border-slate-600/30 hover:border-cyan-400/50 backdrop-blur-sm group overflow-hidden"
      >
        <!-- Background glow effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 to-blue-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
        <svg class="relative w-5 h-5 transition-transform duration-300 group-hover:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Menu Items -->
    <div class="p-6 flex-1 overflow-y-auto">
      <div class="space-y-4">
        <a 
          href="/" 
          class="menu-item group relative flex items-center p-4 text-white bg-gradient-to-r from-slate-700/80 to-slate-800/60 hover:from-blue-600/90 hover:to-blue-700/80 rounded-xl border border-slate-600/30 hover:border-blue-400/50 backdrop-blur-sm transition-all duration-300 transform hover:scale-[1.02] hover:-translate-y-0.5 shadow-lg hover:shadow-blue-500/20 overflow-hidden"
          style="animation-delay: 0.1s"
        >
          <!-- Background glow -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-cyan-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          
          <div class="relative w-11 h-11 bg-gradient-to-br from-blue-500 to-blue-600 hover:from-blue-400 hover:to-blue-500 rounded-xl mr-4 flex items-center justify-center shadow-lg transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-5 h-5 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          <div class="relative">
            <span class="font-semibold text-lg transition-colors duration-300">ホーム</span>
            <div class="text-xs text-slate-400 group-hover:text-blue-200 transition-colors duration-300 mt-0.5">メインページへ</div>
          </div>
          
          <!-- Arrow indicator -->
          <div class="ml-auto opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-1 group-hover:translate-x-0">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>

        <a 
          href="/profile/" 
          class="menu-item group relative flex items-center p-4 text-white bg-gradient-to-r from-slate-700/80 to-slate-800/60 hover:from-cyan-600/90 hover:to-cyan-700/80 rounded-xl border border-slate-600/30 hover:border-cyan-400/50 backdrop-blur-sm transition-all duration-300 transform hover:scale-[1.02] hover:-translate-y-0.5 shadow-lg hover:shadow-cyan-500/20 overflow-hidden"
          style="animation-delay: 0.2s"
        >
          <!-- Background glow -->
          <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/10 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          
          <div class="relative w-11 h-11 bg-gradient-to-br from-cyan-500 to-cyan-600 hover:from-cyan-400 hover:to-cyan-500 rounded-xl mr-4 flex items-center justify-center shadow-lg transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-5 h-5 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div class="relative">
            <span class="font-semibold text-lg transition-colors duration-300">プロフィール</span>
            <div class="text-xs text-slate-400 group-hover:text-cyan-200 transition-colors duration-300 mt-0.5">著者について</div>
          </div>
          
          <!-- Arrow indicator -->
          <div class="ml-auto opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-1 group-hover:translate-x-0">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>

        <a 
          href="/search/" 
          class="menu-item group relative flex items-center p-4 text-white bg-gradient-to-r from-slate-700/80 to-slate-800/60 hover:from-emerald-600/90 hover:to-emerald-700/80 rounded-xl border border-slate-600/30 hover:border-emerald-400/50 backdrop-blur-sm transition-all duration-300 transform hover:scale-[1.02] hover:-translate-y-0.5 shadow-lg hover:shadow-emerald-500/20 overflow-hidden"
          style="animation-delay: 0.3s"
        >
          <!-- Background glow -->
          <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/10 to-green-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          
          <div class="relative w-11 h-11 bg-gradient-to-br from-emerald-500 to-emerald-600 hover:from-emerald-400 hover:to-emerald-500 rounded-xl mr-4 flex items-center justify-center shadow-lg transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-5 h-5 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <div class="relative">
            <span class="font-semibold text-lg transition-colors duration-300">検索</span>
            <div class="text-xs text-slate-400 group-hover:text-emerald-200 transition-colors duration-300 mt-0.5">記事を検索</div>
          </div>
          
          <!-- Arrow indicator -->
          <div class="ml-auto opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-1 group-hover:translate-x-0">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>

        <a 
          href="/contact/" 
          class="menu-item group relative flex items-center p-4 text-white bg-gradient-to-r from-slate-700/80 to-slate-800/60 hover:from-purple-600/90 hover:to-purple-700/80 rounded-xl border border-slate-600/30 hover:border-purple-400/50 backdrop-blur-sm transition-all duration-300 transform hover:scale-[1.02] hover:-translate-y-0.5 shadow-lg hover:shadow-purple-500/20 overflow-hidden"
          style="animation-delay: 0.4s"
        >
          <!-- Background glow -->
          <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 to-pink-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          
          <div class="relative w-11 h-11 bg-gradient-to-br from-purple-500 to-purple-600 hover:from-purple-400 hover:to-purple-500 rounded-xl mr-4 flex items-center justify-center shadow-lg transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-5 h-5 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="relative">
            <span class="font-semibold text-lg transition-colors duration-300">お問い合わせ</span>
            <div class="text-xs text-slate-400 group-hover:text-purple-200 transition-colors duration-300 mt-0.5">ご連絡はこちら</div>
          </div>
          
          <!-- Arrow indicator -->
          <div class="ml-auto opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-1 group-hover:translate-x-0">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>
      </div>
    </div>

    <!-- Footer -->
    <div class="absolute bottom-0 left-0 right-0 p-6 border-t border-slate-600/30 bg-gradient-to-r from-slate-800/90 to-slate-700/80 backdrop-blur-sm">
      <div class="text-center">
        <div class="flex items-center justify-center space-x-2 mb-2">
          <div class="w-1.5 h-1.5 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-pulse"></div>
          <p class="text-slate-300 text-sm font-medium">© 2025 Monologger</p>
          <div class="w-1.5 h-1.5 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-pulse"></div>
        </div>
        <p class="text-xs text-slate-500">テクノロジーブログ</p>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  function openMobileMenu() {
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    if (mobileMenu && overlay) {
      // アニメーション用クラスを追加
      document.body.classList.add("mobile-menu-open");
      
      // オーバーレイを表示
      overlay.classList.remove("opacity-0", "pointer-events-none");
      overlay.classList.add("opacity-100");
      
      // メニューをスライドイン
      mobileMenu.classList.remove("translate-x-full");
      mobileMenu.classList.add("translate-x-0");
      
      // ボディのスクロールを無効化
      document.body.style.overflow = "hidden";
      
      // メニュー項目のアニメーション用初期化
      const menuItems = mobileMenu.querySelectorAll('.menu-item');
      menuItems.forEach(item => {
        item.style.opacity = '0';
        item.style.transform = 'translateX(30px) scale(0.95)';
      });
      
      // スタッガードアニメーション開始
      setTimeout(() => {
        menuItems.forEach((item, index) => {
          setTimeout(() => {
            item.style.transition = 'all 0.5s cubic-bezier(0.23, 1, 0.32, 1)';
            item.style.opacity = '1';
            item.style.transform = 'translateX(0) scale(1)';
          }, index * 100);
        });
      }, 100);
    }
  }

  function closeMobileMenu() {
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    if (mobileMenu && overlay) {
      // アニメーション用クラスを削除
      document.body.classList.remove("mobile-menu-open");
      
      // メニュー項目を即座にリセット
      const menuItems = mobileMenu.querySelectorAll('.menu-item');
      menuItems.forEach(item => {
        item.style.transition = '';
        item.style.opacity = '';
        item.style.transform = '';
      });
      
      // オーバーレイを非表示
      overlay.classList.remove("opacity-100");
      overlay.classList.add("opacity-0", "pointer-events-none");
      
      // メニューをスライドアウト
      mobileMenu.classList.remove("translate-x-0");
      mobileMenu.classList.add("translate-x-full");
      
      // ボディのスクロールを有効化
      document.body.style.overflow = "";
    }
  }
  
  // View Transitionsに対応したイベントリスナー設定
  function initializeMobileMenu() {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenuClose = document.getElementById("mobile-menu-close");
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    // 既存のイベントリスナーをクリア（重複を防ぐため）
    if (mobileMenuButton) {
      mobileMenuButton.onclick = null;
    }
    if (mobileMenuClose) {
      mobileMenuClose.onclick = null;
    }
    if (overlay) {
      overlay.onclick = null;
    }
    
    // ハンバーガーボタンクリック
    if (mobileMenuButton) {
      mobileMenuButton.onclick = function(e) {
        e.preventDefault();
        e.stopPropagation();
        openMobileMenu();
      };
    }
    
    // 閉じるボタンクリック
    if (mobileMenuClose) {
      mobileMenuClose.onclick = function(e) {
        e.preventDefault();
        e.stopPropagation();
        closeMobileMenu();
      };
    }
    
    // オーバーレイクリックで閉じる
    if (overlay) {
      overlay.onclick = function() {
        closeMobileMenu();
      };
    }
    
    // メニュー内のリンクをクリックしたら閉じる
    if (mobileMenu) {
      const menuLinks = mobileMenu.querySelectorAll("a");
      menuLinks.forEach(function(link) {
        link.onclick = function() {
          closeMobileMenu();
        };
      });
    }
  }
  
  // ESCキーで閉じる（グローバルイベント）
  function handleEscapeKey(e) {
    if (e.key === "Escape") {
      closeMobileMenu();
    }
  }
  
  // 初回ページ読み込み時とView Transitionsでのページ遷移時に実行
  document.addEventListener("DOMContentLoaded", initializeMobileMenu);
  document.addEventListener("astro:page-load", initializeMobileMenu);
  
  // ESCキーイベントは一度だけ設定
  document.addEventListener("keydown", handleEscapeKey);
  
  // 画面向き変更・リサイズ対応
  function handleOrientationAndResize() {
    const mobileMenu = document.getElementById("mobile-menu");
    const overlay = document.getElementById("mobile-menu-overlay");
    
    // デスクトップサイズ（768px以上）でモバイルメニューが開いている場合は閉じる
    if (window.innerWidth >= 768) {
      if (mobileMenu && overlay) {
        closeMobileMenu();
      }
    }
    
    // ビューポートの高さを強制リセット（向き変更時の問題解決）
    if (window.visualViewport) {
      document.documentElement.style.setProperty('--vh', `${window.visualViewport.height * 0.01}px`);
    } else {
      document.documentElement.style.setProperty('--vh', `${window.innerHeight * 0.01}px`);
    }
  }
  
  // デバウンス付きリサイズハンドラー
  let resizeTimeout;
  function debouncedResize() {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(handleOrientationAndResize, 150);
  }
  
  // 向き変更時の特別処理
  function handleOrientationChange() {
    // 向き変更時は少し長めの遅延で処理
    setTimeout(function() {
      handleOrientationAndResize();
      // ビューポートを強制リフレッシュ
      window.scrollTo(0, window.scrollY);
    }, 300);
  }
  
  // イベントリスナーを設定
  window.addEventListener('resize', debouncedResize);
  window.addEventListener('orientationchange', handleOrientationChange);
  
  // Visual Viewport API対応（iOS Safari等）
  if (window.visualViewport) {
    window.visualViewport.addEventListener('resize', debouncedResize);
  }
  
  // 初期設定
  handleOrientationAndResize();
</script>
