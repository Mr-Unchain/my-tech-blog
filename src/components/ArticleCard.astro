---
// src/components/ArticleCard.astro
type ColorKey = "sky" | "purple" | "pink";
export interface Props {
  category: string;
  title: string;
  description: string;
  date: string;
  imageUrl: string;
  categoryColor: ColorKey;
}
const { category, title, description, date, imageUrl, categoryColor } =
  Astro.props;
const colorMap: Record<ColorKey, string> = {
  sky: "text-sky-600 bg-sky-100",
  purple: "text-purple-600 bg-purple-100",
  pink: "text-pink-600 bg-pink-100",
};
const categoryClasses =
  colorMap[categoryColor] || "text-slate-600 bg-slate-100";
---

<article
  class="bg-white rounded-xl shadow-md overflow-hidden transition-shadow duration-300 hover:shadow-xl md:flex"
>
  <div class="md:w-1/3">
    <img
      class="h-48 w-full object-cover md:h-full"
      src={imageUrl}
      alt={`「${title}」の記事の画像`}
    />
  </div>
  <div class="p-6 md:p-8 md:w-2/3">
    <span
      class={`text-xs font-semibold py-1 px-3 rounded-full ${categoryClasses}`}
      >{category}</span
    >
    <h3 class="font-bold text-xl mt-3 mb-3">
      <a href="#" class="hover:underline">{title}</a>
    </h3>
    <p class="text-slate-600 text-sm mb-4">{description}</p>
    <time class="text-xs text-slate-500">{date}</time>
  </div>
</article>
