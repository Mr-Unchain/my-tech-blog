---
// src/components/ArticleCard.astro
import { Image } from "astro:assets";

type ColorKey = "sky" | "purple" | "pink" | "slate" | "gray";
export interface Props {
  id: string;
  category: string | string[];
  title: string;
  description: string;
  date: string;
  imageUrl: string;
  categoryColor: ColorKey | ColorKey[];
}
const { id, category, title, description, date, imageUrl, categoryColor } =
  Astro.props;
const colorMap: Record<ColorKey, string> = {
  sky: "text-sky-300 bg-sky-900/60 border-sky-400/30",
  purple: "text-purple-300 bg-purple-900/60 border-purple-400/30",
  pink: "text-pink-300 bg-pink-900/60 border-pink-400/30",
  slate: "text-gray-400 bg-gray-700/50 border-gray-600/30",
  gray: "text-gray-400 bg-gray-700/50 border-gray-600/30",
};
// 配列で受け取るように変換
const categories = Array.isArray(category) ? category : [category];
const categoryColors = Array.isArray(categoryColor)
  ? categoryColor
  : [categoryColor];

const MAX_CATEGORIES_TO_SHOW = 3;
const displayedCategories = categories.slice(0, MAX_CATEGORIES_TO_SHOW);
const hiddenCategoriesCount = categories.length - displayedCategories.length;
---

<a
  href={`/blog/${id}/`}
  class="group flex flex-col h-full rounded-xl overflow-hidden bg-gray-800 border border-gray-700 transition-all duration-300 hover:border-blue-500/50 hover:-translate-y-1 hover:shadow-2xl hover:shadow-gray-900/60"
>
  <div class="aspect-video overflow-hidden">
    <Image
      src={imageUrl}
      width={400}
      height={225}
      alt={`「${title}」の記事の画像`}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>
  <div class="p-6 flex flex-col flex-grow">
    <div class="flex flex-wrap items-center gap-2 mb-3">
      {
        displayedCategories.map((cat, idx) => (
          <span
            class={`text-xs font-bold py-1 px-3 rounded-full self-start ${colorMap[categoryColors[idx] ?? categoryColors[0]]}`}
          >
            {cat}
          </span>
        ))
      }
      {
        hiddenCategoriesCount > 0 && (
          <span class="text-xs font-bold py-1 px-2.5 rounded-full bg-gray-700 text-gray-300 self-start">
            +{hiddenCategoriesCount}
          </span>
        )
      }
    </div>
    <h3
      class="font-bold text-xl text-gray-50 leading-tight group-hover:text-blue-400 transition-colors duration-300 line-clamp-2"
    >
      {title}
    </h3>
    <p class="text-gray-400 text-sm mt-3 mb-4 line-clamp-3">
      {description}
    </p>
    <time class="text-xs text-gray-500 mt-auto">{date}</time>
  </div>
</a>
