---
// src/components/Footer.astro
const today = new Date();
---

<footer class="bg-gradient-to-t from-slate-900 via-slate-900/95 to-slate-900/90 text-slate-300 py-16 md:py-20 relative overflow-hidden">
  <!-- Smooth transition overlay -->
  <div class="absolute -top-16 left-0 right-0 h-16 bg-gradient-to-b from-slate-900/0 via-slate-900/50 to-slate-900 pointer-events-none"></div>
  
  <!-- Elegant top border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-slate-600/40 to-transparent"></div>
  <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-32 h-px bg-gradient-to-r from-transparent via-cyan-400/60 to-transparent"></div>
  
  <!-- Background tech pattern -->
  <div class="absolute inset-0 bg-tech-grid bg-tech-grid opacity-5 pointer-events-none"></div>
  
  <div class="container mx-auto px-6 max-w-7xl relative z-10">
    <div class="flex flex-col md:flex-row justify-between items-center space-y-6 md:space-y-0">
      <div class="flex flex-col md:flex-row items-center space-y-4 md:space-y-0 md:space-x-6">
        <div class="relative">
          <div class="w-3 h-3 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-pulse"></div>
          <div class="absolute inset-0 w-3 h-3 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full animate-ping opacity-30"></div>
        </div>
        <div class="text-center md:text-left">
          <p class="text-lg font-medium">
            &copy; {today.getFullYear()} 
            <span class="font-bold bg-gradient-to-r from-white to-cyan-100 bg-clip-text text-transparent">Monologger</span>
            . All rights reserved.
          </p>
          <p class="text-sm text-slate-400 mt-1">Building the future, one line of code at a time.</p>
        </div>
      </div>
      
      <div class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-8">
        <a 
          href="/privacy" 
          class="text-slate-300 hover:text-cyan-400 transition-all duration-300 font-medium relative group px-4 py-2 rounded-lg hover:bg-slate-800/30"
        >
          プライバシーポリシー
          <span class="absolute -bottom-1 left-4 w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-[calc(100%-2rem)] transition-all duration-300 rounded-full"></span>
        </a>
        <a 
          href="/contact" 
          class="text-slate-300 hover:text-cyan-400 transition-all duration-300 font-medium relative group px-4 py-2 rounded-lg hover:bg-slate-800/30"
        >
          お問い合わせ
          <span class="absolute -bottom-1 left-4 w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-500 group-hover:w-[calc(100%-2rem)] transition-all duration-300 rounded-full"></span>
        </a>
      </div>
    </div>
    
    <!-- Tech accent section -->
    <div class="mt-12 md:mt-16 pt-6 md:pt-8 border-t border-slate-800/50 relative">
      <!-- Decorative line with gradient -->
      <div class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-0.5 w-24 md:w-32 h-0.5 bg-gradient-to-r from-transparent via-cyan-400 to-transparent"></div>
      
      <div class="flex flex-col space-y-6">
        <!-- Tech stack -->
        <div class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-8">
          <div class="flex items-center space-x-3 text-slate-500 text-sm">
            <div class="w-1.5 h-1.5 bg-cyan-400 rounded-full animate-pulse"></div>
            <span class="font-medium">Powered by</span>
          </div>
          <div class="flex flex-wrap justify-center items-center gap-3">
            <a 
              href="https://astro.build/" 
              target="_blank" 
              rel="noopener noreferrer"
              aria-label="Astroの公式サイトを見る"
              class="px-4 py-2 bg-slate-800/60 text-cyan-300 rounded-lg text-sm font-medium border border-slate-700/50 shadow-sm backdrop-blur-sm hover:bg-slate-700/60 hover:text-cyan-200 hover:border-cyan-500/50 hover:shadow-cyan-500/20 transition-all duration-300 cursor-pointer"
            >
              Astro
            </a>
            <a 
              href="https://www.typescriptlang.org/" 
              target="_blank" 
              rel="noopener noreferrer"
              aria-label="TypeScriptの公式サイトを見る"
              class="px-4 py-2 bg-slate-800/60 text-blue-300 rounded-lg text-sm font-medium border border-slate-700/50 shadow-sm backdrop-blur-sm hover:bg-slate-700/60 hover:text-blue-200 hover:border-blue-500/50 hover:shadow-blue-500/20 transition-all duration-300 cursor-pointer"
            >
              TypeScript
            </a>
            <a 
              href="https://tailwindcss.com/" 
              target="_blank" 
              rel="noopener noreferrer"
              aria-label="Tailwind CSSの公式サイトを見る"
              class="px-4 py-2 bg-slate-800/60 text-purple-300 rounded-lg text-sm font-medium border border-slate-700/50 shadow-sm backdrop-blur-sm hover:bg-slate-700/60 hover:text-purple-200 hover:border-purple-500/50 hover:shadow-purple-500/20 transition-all duration-300 cursor-pointer"
            >
              Tailwind CSS
            </a>
          </div>
        </div>
        
        <!-- Made with love -->
        <div class="flex justify-center items-center space-x-3 text-slate-500 text-sm">
          <span>Made with</span>
          <div class="w-1.5 h-1.5 bg-red-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
          <span>by developers, for developers</span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom gradient overlay -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-cyan-500/20 via-blue-500/30 to-cyan-500/20"></div>
</footer>
