// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---

<footer class="text-slate-400 mt-16 md:mt-24">
  <div
    class="container mx-auto px-4 py-8 border-t border-slate-800 text-center"
  >
    <div class="mb-4 space-x-2 md:space-x-6">
      <a
        href="/"
        class="text-sm px-3 py-2 rounded-md hover:bg-slate-800 hover:text-white transition-colors"
        >ホーム</a
      >
      <a
        href="/privacy"
        class="text-sm px-3 py-2 rounded-md hover:bg-slate-800 hover:text-white transition-colors"
        >プライバシーポリシー</a
      >
      <a
        href="/contact"
        class="text-sm px-3 py-2 rounded-md hover:bg-slate-800 hover:text-white transition-colors"
        >お問い合わせ</a
      >
    </div>
    <p class="text-xs text-slate-500">
      &copy; {currentYear} TechGadget Hub. All Rights Reserved.
    </p>
  </div>
</footer>
