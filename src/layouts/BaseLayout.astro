---
// src/layouts/BaseLayout.astro
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

export interface Props {
  pageTitle?: string;
  pageDescription?: string;
  ogImageUrl?: string;
}

const {
  pageTitle,
  pageDescription = "書斎のテックギアは、デスク周りのガジェットやソフトウェアについての情報を発信する技術ブログです。",
  ogImageUrl,
} = Astro.props;

const siteTitle = "書斎のテックギア";
const title = pageTitle ? `${pageTitle} | ${siteTitle}` : siteTitle;
const ogpImageUrl = ogImageUrl || new URL('default-og-image.png', Astro.site).href;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={pageDescription} />

    <!-- OGP Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogpImageUrl} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogpImageUrl} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&family=Noto+Sans+JP:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />

    <style is:global>
      body {
        font-family: "Noto Sans JP", "Inter", sans-serif;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      .font-inter {
        font-family: "Inter", "Noto Sans JP", sans-serif;
      }
      /* ★★★ 本文の文字色を修正しました ★★★ */
      .prose {
        color: #94a3b8; /* slate-400 */
      }
      .prose h2 {
        color: #f3f4f6; /* gray-100 */
        border-bottom-color: #374151; /* gray-700 */
      }
      .prose a {
        color: #60a5fa; /* blue-400 */
      }
      .prose strong {
        color: #f9fafb; /* gray-50 */
      }
    </style>
  </head>
  <body class="bg-slate-900 text-slate-300">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
