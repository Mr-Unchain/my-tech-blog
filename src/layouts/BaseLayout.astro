---
// src/layouts/BaseLayout.astro
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/main.scss";

export interface Props {
  pageTitle?: string;
  pageDescription?: string;
  ogImageUrl?: string;
  keywords?: string;
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
  articleType?: string;
  noIndex?: boolean;
}

const {
  pageTitle,
  pageDescription = "Monologgerは、テクノロジー、ガジェット、開発に関する情報を発信する技術ブログです。",
  ogImageUrl,
  keywords = "テクノロジー, ガジェット, 開発, プログラミング, Web開発, JavaScript, React, Astro",
  author = "Monologger",
  publishedTime,
  modifiedTime,
  articleType = "website",
  noIndex = false,
} = Astro.props;

const siteTitle = "Monologger";
const title = pageTitle ? `${pageTitle} | ${siteTitle}` : siteTitle;
const ogpImageUrl =
  ogImageUrl || new URL("default-og-image.svg", Astro.site).href;

// カノニカルURLの生成
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).href;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    
    <!-- SEO Meta Tags -->
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    {!noIndex && <meta name="robots" content="index, follow" />}
    <meta name="googlebot" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Enhanced OGP Tags -->
    <meta property="og:site_name" content={siteTitle} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogpImageUrl} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content={articleType} />
    <meta property="og:locale" content="ja_JP" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    <meta property="article:author" content={author} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@monologger" />
    <meta name="twitter:creator" content="@monologger" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogpImageUrl} />

    <!-- Additional Meta Tags for SEO -->
    <meta name="theme-color" content="#0f172a" />
    <meta name="msapplication-TileColor" content="#0f172a" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&family=Noto+Sans+JP:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    
    <!-- Sitemap and RSS -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- DNS Prefetch for external domains -->
    <link rel="dns-prefetch" href="//images.microcms-assets.io" />
    
    <!-- Structured Data - Website Schema -->
    <script type="application/ld+json">
      {
        JSON.stringify({
          "@context": "https://schema.org",
          "@type": "WebSite",
          "name": siteTitle,
          "url": Astro.site,
          "description": pageDescription,
          "publisher": {
            "@type": "Organization",
            "name": siteTitle,
            "logo": {
              "@type": "ImageObject",
              "url": new URL("/logo.svg", Astro.site).href
            }
          },
          "potentialAction": {
            "@type": "SearchAction",
            "target": new URL("/search?q={search_term_string}", Astro.site).href,
            "query-input": "required name=search_term_string"
          }
        })
      }
    </script>
    
    <!-- Page specific structured data slot -->
    <slot name="head" />

    <!-- スタイルは src/styles/main.scss に集約 -->
  </head>
  <body class="flex flex-col min-h-screen bg-slate-900">
    <Header />
    <main class="flex-grow" id="swup">
      <slot />
    </main>
    <Footer />

    <script is:inline>
      import Swup from 'swup';
      import SwupScriptsPlugin from '@swup/scripts-plugin';

      const swup = new Swup({
        plugins: [new SwupScriptsPlugin()]
      });
    </script>
  </body>
</html>
